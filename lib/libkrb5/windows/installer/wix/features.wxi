<Include xmlns="http://schemas.microsoft.com/wix/2003/01/wi">
    <Feature 
        Id="feaKfw"
        AllowAdvertise="no"
        Description="$(loc.KerberosDesc)"
        InstallDefault="local"
        Title="$(loc.KerberosTitle)"
        ConfigurableDirectory="KERBEROSDIR"
        Level="30">

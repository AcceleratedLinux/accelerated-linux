###############################################################################
# Tacacs, local if down
###############################################################################
auth optional pam_faildelay.so delay=5000000
auth optional pam_echo.so file=/etc/config/motd
auth sufficient pam_portauth.so
auth [success=1 default=ignore] pam_succeed_if.so login != root quiet
auth [success=done default=ignore] pam_unix.so
auth [success=2 authinfo_unavail=ignore default=bad] pam_tacplus.so service=raccess try_first_pass
auth [success=1 default=bad] pam_unix.so use_first_pass
auth [default=die] pam_infod.so # post auth_error and deny
auth optional pam_adduser.so

account sufficient pam_portauth.so
account [authinfo_unavail=ignore auth_err=ignore success=1] pam_tacplus.so service=raccess
account sufficient pam_unix.so
account optional pam_adduser.so
account required pam_localuser.so

session optional pam_tacplus.so service=raccess
session required pam_unix.so
session optional pam_infod.so # post login/logout

hostname Oolite

echo "Mounting filesystems..."
mount -t proc proc /proc
mount -t sysfs sys /sys
mkdir -m 755 /dev/pts
mount -t devpts devpts /dev/pts
mount -t tmpfs -o size=40M tmpfs /tmp
mount -t tmpfs -o size=32M tmpfs /var
mkdir -m 1777 /var/tmp
mkdir -m 755 /var/log
mkdir -m 755 /var/run
mkdir -m 1777 /var/lock
mkdir -m 755 /var/empty
mkdir -m 755 /var/mnt

ifconfig lo 127.0.0.1

/sbin/swconfig dev switch0 load /etc/network
ip link add link eth0 name lan1 type vlan id 1
#ip link add link eth0 name lan2 type vlan id 1
#ip link add link eth0 name lan3 type vlan id 1
#ip link add link eth0 name lan4 type vlan id 1
#ip link set eth1 name wan

ifconfig eth0 up

cat /etc/motd

exit 0

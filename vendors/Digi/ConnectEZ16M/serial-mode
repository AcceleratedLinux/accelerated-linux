#!/bin/sh

#
# serial-mode.sh - setup and control serial port interface mode
#
# (C) Copyright 2020, Digi International.
#

#
# GPIO648 = port 1 termination/biasing (output, active high, default low)
# GPIO649 = port 2 termination/biasing (output, active high, default low)
# GPIO650 = port 3 termination/biasing (output, active high, default low)
# GPIO651 = port 4 termination/biasing (output, active high, default low)
# GPIO652 = port 5 termination/biasing (output, active high, default low)
# GPIO653 = port 6 termination/biasing (output, active high, default low)
# GPIO654 = port 7 termination/biasing (output, active high, default low)
# GPIO655 = port 8 termination/biasing (output, active high, default low)
#
# GPIO664 = port 9 termination/biasing (output, active high, default low)
# GPIO665 = port 10 termination/biasing (output, active high, default low)
# GPIO666 = port 11 termination/biasing (output, active high, default low)
# GPIO667 = port 12 termination/biasing (output, active high, default low)
# GPIO668 = port 13 termination/biasing (output, active high, default low)
# GPIO669 = port 14 termination/biasing (output, active high, default low)
# GPIO670 = port 15 termination/biasing (output, active high, default low)
# GPIO671 = port 16 termination/biasing (output, active high, default low)
#
# GPIO640 = port 1 2-wire, half-duplex enable (output, active high, default low)
# GPIO641 = port 2 2-wire, half-duplex enable (output, active high, default low)
# GPIO642 = port 3 2-wire, half-duplex enable (output, active high, default low)
# GPIO643 = port 4 2-wire, half-duplex enable (output, active high, default low)
# GPIO644 = port 5 2-wire, half-duplex enable (output, active high, default low)
# GPIO645 = port 6 2-wire, half-duplex enable (output, active high, default low)
# GPIO646 = port 7 2-wire, half-duplex enable (output, active high, default low)
# GPIO647 = port 8 2-wire, half-duplex enable (output, active high, default low)
#
# GPIO656 = port 9 2-wire, half-duplex enable (output, active high, default low)
# GPIO657 = port 10 2-wire, half-duplex enable (output, active high, default low)
# GPIO658 = port 11 2-wire, half-duplex enable (output, active high, default low)
# GPIO659 = port 12 2-wire, half-duplex enable (output, active high, default low)
# GPIO660 = port 13 2-wire, half-duplex enable (output, active high, default low)
# GPIO661 = port 14 2-wire, half-duplex enable (output, active high, default low)
# GPIO662 = port 15 2-wire, half-duplex enable (output, active high, default low)
# GPIO663 = port 16 2-wire, half-duplex enable (output, active high, default low)

get_term_gpio() {
	if [ "$1" -ge "0" ] && [ "$1" -le "7" ] ; then
		gpio="$((648 + $1))"
	elif [ "$1" -ge "8" ] && [ "$1" -le "15" ] ; then
		gpio="$((664 + ($1 - 8)))"
	fi

	echo "$gpio"
}

get_2w_gpio() {
	if [ "$1" -ge "0" ] && [ "$1" -le "7" ] ; then
		gpio="$((640 + $1))"
	elif [ "$1" -ge "8" ] && [ "$1" -le "15" ] ; then
		gpio="$((656 + ($1 - 8)))"
	fi

	echo "$gpio"
}

get_uart_index() {
	if [ "$1" -ge "0" ] && [ "$1" -le "7" ] ; then
		index="$1"
	elif [ "$1" -ge "8" ] && [ "$1" -le "15" ] ; then
		index=$(($1 - 8))
	elif [ "$1" -ge "16" ] && [ "$1" -le "23" ] ; then
		index=$(($1 - 16))
	elif [ "$1" -ge "24" ] && [ "$1" -le "31" ] ; then
		index=$(($1 - 24))
	fi

	echo "$index"
}

serial_init() {
	# The initialization prepares GPIOs, but defers mode shift
	# until mode is selected.
	term=$(get_term_gpio $1)
	wire=$(get_2w_gpio $1)
	echo "${term}" > /sys/class/gpio/export
	echo "${wire}" > /sys/class/gpio/export
}

serial_rs232() {
	wire=$(get_2w_gpio $1)
	uart_index=$(get_uart_index $1)
	echo "low" > /sys/class/gpio/gpio${wire}/direction
	echo "$uart_index,232" > /sys/class/tty/ttyS$((1 + $1))/device/../../uart_mode
}

serial_rs422() {
	wire=$(get_2w_gpio $1)
	uart_index=$(get_uart_index $1)
	echo "low" > /sys/class/gpio/gpio${wire}/direction
	echo "$uart_index,422" > /sys/class/tty/ttyS$((1 + $1))/device/../../uart_mode
}

serial_rs485() {  # 2-wire, half-duplex
	wire=$(get_2w_gpio $1)
	uart_index=$(get_uart_index $1)
	echo "high" > /sys/class/gpio/gpio${wire}/direction
	echo "$uart_index,485_2W" > /sys/class/tty/ttyS$((1 + $1))/device/../../uart_mode
}

serial_nonterminate() {
	term=$(get_term_gpio $1)
	echo "low" > /sys/class/gpio/gpio${term}/direction
}

serial_terminate() {
	term=$(get_term_gpio $1)
	echo "high" > /sys/class/gpio/gpio${term}/direction
}

altpin() {
	# ttyS1 - ttyS16
	tty_num=$((${1} + 1))
	echo "$2" > /sys/class/tty/ttyS$tty_num/altpin
	exit 0
}

usage() {
	echo "usage: serial-mode <device> (init|rs-232|rs-422|rs-485) [terminate]"
	echo
	echo "        init      -- initialize port control"
	echo "        powerdown -- not supported"
	echo "        rs-232    -- set port into RS-232 mode (default)"
	echo "        rs-422    -- set port into RS-422 mode"
	echo "        rs-485    -- set port into RS-485 mode"
	echo "        terminate -- enable line termination"
	echo
	echo "usage: serial-mode <device> altpin (on|off)"
	echo
	echo "        altpin    -- enable 8-pin altpin mode"
	echo
	exit 1
}

#
# Check arguments, and error out on anything invalid.
#
if [ $# -lt 2 -o $# -gt 3 ] ; then
	usage
fi

if [ "$2" = "altpin" ]; then
	case "$3" in
	on|off)	;;
	*)	usage ;;
	esac
fi

portnum="${1#/dev/serial/port}"
if [ "${portnum}" -lt "1" ] || [ "${portnum}" -gt "16" ] ; then
	echo "ERROR: serial-mode not supported on supplied port"
	exit 1
fi

portnum=$((${portnum} - 1))

case "$2" in
init)	serial_init ${portnum} ;;
powerdown)
	# Not supported, exit with success
	exit 0
	;;
rs-232)	serial_rs232 ${portnum} ;;
rs-422)	serial_rs422 ${portnum} ;;
rs-485)	serial_rs485 ${portnum} ;;
altpin)	altpin ${portnum} "$3" ;;
*)	usage ;;
esac

if [ "$3" = "terminate" ] && [ "$2" != "rs-232" ] ; then
	serial_terminate ${portnum}
else
	serial_nonterminate ${portnum}
fi

exit 0

/dts-v1/;

/ {
	description = "Digi/TX40 EVT";
	address-cells = <1>;

	images {
		kernel-1 {
			description = "Linux kernel";
			data = /incbin/("kernel.gz");
			type = "kernel";
			arch = "arm64";
			os = "linux";
			compression = "gzip";
			load = <0x84080000>;
			entry = <0x84080000>;
			hash-2 {
				algo = "sha1";
			};
		};

		ramdisk-1 {
			description = "Linux ramdisk";
			data = /incbin/("rootfs.bin");
			type = "ramdisk";
			arch = "arm64";
			os = "linux";
			compression = "none";
			hash-2 {
				algo = "sha1";
			};
		};

		fdt-1 {
			description = "Flattened Device Tree blob";
			data = /incbin/("fsl-ls1028a-tx40-evt.dtb");
			type = "flat_dt";
			arch = "arm64";
			compression = "none";
			load = <0x88000000>;
			hash-2 {
				algo = "sha1";
			};
		};
	};

	configurations {
		default = "config-1";
		config-1 {
			description = "Digi/TX40 EVT image";
			kernel = "kernel-1";
			ramdisk = "ramdisk-1";
			fdt = "fdt-1";
		};
	};
};

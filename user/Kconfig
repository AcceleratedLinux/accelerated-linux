	bool "pwconv"
	depends on USER_SHADOW_UTILS
	help
	  Convert to and from shadow passwords and groups.

config USER_SHADOW_PWUNCONV
	bool "pwunconv"
	depends on USER_SHADOW_UTILS
	help
	  Convert to and from shadow passwords and groups.

config USER_SHADOW_SU
	bool "su"
	depends on USER_SHADOW_UTILS
	help
	  Change user ID or become super-user.


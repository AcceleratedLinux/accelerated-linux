$(BUILT_SOURCES) config.h:	.X$(subst /,_,$(sysconfdir))-up-to-date

distclean-local:	distclean-uptodate

distclean-uptodate:
			@rm -f  .*-up-to-date

.%-up-to-date:
			@rm -f  .*-up-to-date
			@$(MAKE) -s clean
			@touch -t 197001020000 '$@'
			@$(MAKE) -s $(BUILT_SOURCES)
